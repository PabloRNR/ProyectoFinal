<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar un título</h4>
            <form action="/admin/catalogo/agregar" method="post" enctype="multipart/form-data">
                 <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Titulo" Name="title">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" placeholder="Director" Name="director">
                </div>
                 <div class="mb-3 row">
                    <input type="number" class="form-control" placeholder="Año" maxlength="4" Name="year" pattern="[1900-2025]+">
                </div>
                <div class="mb-3 row">
                    <input type="number" class="form-control" placeholder="Rating" pattern="[0-10]+" Name="rating" min="0.01" {{!-- value="0"--}} step=".01">
                </div>
                 <div class="mb-3 row">
                    <textarea type="text" class="form-control" placeholder="sinopsis" Name="sinopsis"></textarea>
                </div>
                <div class="form-group">
                    <label>Poster: <input type="file" name="img_id" id="img_id" /></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                {{message}}
            {{/if}}
        </div>
    </div>
</div>